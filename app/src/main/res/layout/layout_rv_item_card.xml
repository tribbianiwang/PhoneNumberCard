<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:layout_marginTop="@dimen/app_margin_small"
    app:layout_goneMarginBottom="@dimen/app_margin_small"
    android:layout_marginLeft="@dimen/app_margin_left"
    android:layout_marginRight="@dimen/app_margin_left"
    android:paddingTop="@dimen/app_margin_left"
    android:paddingBottom="@dimen/app_margin_left"
    android:orientation="horizontal">

    <TextView
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/design_text_black"
        android:id="@+id/tv_name"
        />

    <TextView
        android:gravity="center"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="15238322537"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/design_text_black"
        android:id="@+id/tv_phone_number"
        />

    <TextView
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="大王卡"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/theme_red"
        android:id="@+id/tv_card_type"
        />

</LinearLayout>